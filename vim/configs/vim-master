call pathogen#infect()

syntax on
filetype plugin indent on

set visualbell
set ruler
set number
set shiftwidth=2
set expandtab
set tabstop=2
set bg=dark
set hlsearch
set incsearch
set ignorecase
set backspace=indent,eol,start
set autoindent

set completeopt=menu,menuone

set list
set listchars=tab:>-,trail:-
set wildignore+=*/tmp/*,*.so,*.swp,*.zip,*.jar,*.class,*/target/*
let g:ctrlp_custom_ignore = '\v[\/]\.(git|hg|svn)$'

map <S-N> :NERDTreeToggle<CR>
map <S-F> :CtrlP<CR>
map <S-T> :TagbarToggle<CR>
